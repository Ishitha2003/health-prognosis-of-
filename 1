clc;
clear all;
close all;
n=-5:0:5;
x=sig_nal_con(n);
figure,subplot(4,2,1);
stem(n,x);
title('signal');
xa=sig_nal_con(n+2);
figure,subplot(4,2,2);
stem(n,xa);
title('signal 1');
xb=sig_nal_con(n-2);
figure,subplot(4,2,3);
stem(n,xb);
title('signal 2');
xc=sig_nal_con(-n);
figure,subplot(4,2,1);
stem(n,xc);
title('signal');
